
<div id="SMSDiv" hidden>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">Send Message</h6>
        </div>
        <div class="panel-body">

            <div class="form-group col-sm-10">
                <div>
                    @Html.Label("Message", new { @class = "control-label col-md-0", Style = "float:left" })
                    <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                </div>
                <div style="clear:both"> </div>
                <div class="col-md-11" style="padding-left: 0px;">
                    @Html.TextArea("txtSMSText", null, new { @Style = "max-width: 100%;height: 65px;", @class = "form-control input-sm col-sm-6", @placeholder = " Message "@*, disabled = "disabled",*@})
                </div>
            </div>
            <div style="float:right; margin-right: 73px;margin-top:60px;"> <input type="button" id="btnSendMessage" value="Send Message" class="btn btn-primary btn-sm" /></div>

        </div>
    </div>
</div>
