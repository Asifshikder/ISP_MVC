
<div class="row" style="padding-left:20px;">

    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Reseller Name", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.TextBox("txtUpdateResellerName", null, new { @class = "form-control input-sm col-sm-6" })
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Login Name", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.TextBox("txtUpdateResellerLoginName", null, new { @class = "form-control input-sm col-sm-6" })
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Password", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.TextBox("txtUpdateResellerPassword", null, new { @class = "form-control input-sm col-sm-6" })
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Address", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.TextBox("txtUpdateResellerAddress", null, new { @class = "form-control input-sm col-sm-6" })
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Reseller Contact", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.TextBox("txtUpdateResellerContact", null, new { @class = "form-control input-sm col-sm-6" })
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Reseller Type", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-12" style="padding-left: 0px;">

            <div class="col-sm-7">
                <input type="radio" name="rdbUpdateResellerType" value="1" checked> <span style=" font-size:20px;"> Bandwith</span>
            </div>
            <div class="col-sm-5">
                <input type="radio" name="rdbUpdateResellerType" value="2"> <span style=" font-size:20px;"> Mac </span>
            </div>

            @*<input type="radio" class="checkbox checkboxpadding20" name="rdbResellerType" id="rdbResellerType" value="Bandwith Reseller" />
                <input type="radio" class="checkbox  checkboxpadding20" name="rdbResellerType" id="rdbResellerType" value="Mac Reseller" />*@
        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Billing Cycle", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.DropDownList("ddlUpdateResellerBillingCycle", null, "-- Select Billing Cycle --", new { @class = "selectpickert bs-select form-control input-sm col-sm-12 ", @multiple = "multiple" })

        </div>
    </div>
    <div class="form-group col-sm-6">
        <div>
            @Html.Label("Reseller Status", new { @class = "control-label col-md-0", Style = "float:left" })
            <span class="required_field col-md-0" style="padding-left:5px"> *</span>
        </div>
        <div style="clear:both"> </div>
        <div class="col-md-11" style="padding-left: 0px;">
            @Html.DropDownList("ddlUpdateResellerStatus", null, new { @class = "form-control input-sm col-sm-12 " })

        </div>
    </div>
</div>

<div class=" panel" style="width: 100%;margin-bottom:5px;">
    <div class="modal-content">
        <div class="modal-header">
            @*<button id="btnUpdateResellerModalClose" type="button" class="close" data-dismiss="modal">&times;</button>*@
            <h4 class="modal-title">Update Reseller Package</h4>
        </div>
        <div class="modal-body panel-body">
            <div class="row col-sm-12">
                <div class="form-group col-sm-6">
                    <div>
                        @Html.Label("Reseller Status", new { @class = "control-label col-md-0", Style = "float:left" })
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        @Html.DropDownList("ddlReselerPackageUpdate", null, "-- Reseler Package --", new { @class = "selectpickert bs-select form-control input-sm col-sm-12 " })
                    </div>
                </div>
                <div class="col-sm-6">
                    <input type="button" name="btnAddPackageInTableForPrice" id="btnAddPackageInTableForPrice" value="Add Package" class="btn btn-sm btn-primary"/>
                </div>
            </div>
        </div>

        <div class="modal-body panel-body">
            <div class="row col-sm-12">
                <table id="tblResellerPackageUpdate" class="table table-striped table-bordered table-responsive">
                    <thead> 
                        <tr>
                            <th hidden></th>
                            <th>
                                @Html.DisplayName("Item Name")
                            </th>
                            <th>
                                @Html.DisplayName("Package Price")
                            </th>

                            <th style="text-align: center; width: 5%">Action</th> 
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

