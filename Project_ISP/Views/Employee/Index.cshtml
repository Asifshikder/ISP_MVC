        //});

        $("#btnInsertEmployee").click(function (e) {

            if (EmployeeManager.Validation() === true) {
                EmployeeManager.InsertEmployeeFromPopUp();
            }
        });

        $("#btnUpdateEmployee").click(function () {

            if (EmployeeManager.EmployeeUpdateValidation() === true) {

                EmployeeManager.UpdateEmployeeInformation();
            }
        });
        $("#btnPopUpEmployeeWorkScheduleSave").click(function () {

            EmployeeManager.SaveEmployeeWorkSchedule();

        });


        $("#btnPopUpEmployeeClose").click(function () {
            $("#mdlEmployeeUpdate").modal("hide");
        });
        $("#btnPopUpEmployeeDutyShift").click(function () {
            $("#mdlEmployeeDutyShift").modal("hide");
        });
        $("#tblEmployee").DataTable();

