        $("#tblEmployee").on("click", "#showEmployeeForUpdate", function (e) {

            e.preventDefault();
            EmployeeID = $(this).closest("tr").find("td:eq(0) input").val();

            EmployeeManager.ShowEmployeeDetailsByIDForUpdate(EmployeeID);
        });

        $("#tblEmployee").on("click", "#showEmployeeWorkSchedules", function (e) {

            e.preventDefault();
            EmployeeID = $(this).closest("tr").find("td:eq(0) input").val();

            EmployeeManager.ShowEmployeeWorkSchedule(EmployeeID);
        });
        $("#tblEmployee").on("click", "#showEmployeeDutyShift", function (e) {

            e.preventDefault();
            EmployeeID = $(this).closest("tr").find("td:eq(0) input").val();

            EmployeeManager.ShowEmployeeDutyShift(EmployeeID);
        });

        $("#createNew").click(function (e) {

            e.preventDefault();
