        });

        $("#btnPopUpEmployeeInsertClose").click(function (e) {
            $("#mdlEmployeeInsert").modal("hide");
        });

        $("#btnPopUpEmployeeWorkSchedule").click(function (e) {
            $("#mdlEmployeeWorkSchedule").modal("hide");
        });

        //$("#btnPopUpPackageUpdateClose").click(function () {
        //    packageID = "";
