<script src="~/Scripts/CustomScripts/ImageManager.js"></script>
<script src="~/Scripts/CustomScripts/DepositManager.js"></script>
<script>
    $(document).ready(function () {
        $("#btnAddDeposit").click(function (e) {
            e.preventDefault();
            if (DepositManager.DepositUpdateValidation() === true) {
                DepositManager.UpdateDeposit();
            }
        });
        $("#btnDeleteDeposit").click(function (e) {
            e.preventDefault();
            DepositManager.DeleteDeposit();
        });
        $('#DepositDate').datepicker({
            dateFormat: 'mm/dd/yy',
            numberOfMonths: 1,
            changeMonth: true,
            changeYear: true
        });

        $("#CompanyID").change(function () {
            debugger;
            var CID = $(this).val();
            $.ajax({
                type: "POST",
                url: "/Deposit/GetPayerList?CompanyID=" + CID,
                contentType: "html",
                success: function (data) {
                    debugger;
                    $("#PayerID").empty();
                    $("#PayerID").append(data);
                }
            });
        });
    });

</script>