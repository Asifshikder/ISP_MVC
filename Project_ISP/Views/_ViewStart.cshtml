@{
    var claimInformation = (System.Security.Claims.ClaimsIdentity)User.Identity;

    //IEnumerable<System.Security.Claims.Claim> claims = claimInformation.Claims.ToList();
    if (claimInformation.IsAuthenticated)
    {
        var role = claimInformation.FindFirst(System.Security.Claims.ClaimTypes.Role).Value;

        if (role == "1" || role == "3"|| role == "4")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
            //Layout = "~/Views/Shared/_LayoutGentella.cshtml";
        }

        else if (role == "2")
        {
            Layout = "~/Views/Shared/_LayoutPage2.cshtml";
        }
        else if (role == "5")
        {
            Layout = "~/Views/Shared/_LayoutReseller.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutPage3.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPage3.cshtml";
    }

}
