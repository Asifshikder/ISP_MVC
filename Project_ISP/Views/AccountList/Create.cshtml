</head> 
<div class="ibox float-e-margins" style="padding-top:10px; height: 100vh;"> 

    <div class="col-md-12">
        <div class="panel panel-default">

            <div class="panel-heading">
                <section class="content-header">
                    <h6 class="panel-title">My Account List</h6>
                    <ol class="breadcrumb" style="padding: 0px 12px;">
                        <li class="active"><a href="/AccountList/Index"><i class="fa fa-dashboard"></i> Account List</a></li>
                        <li class="active"> <a href="/AccountList/Create">  Create Account </a> </li>
                    </ol>
                </section>
            </div>
            <div class="panel-body">

                <div class="form-group col-sm-6">
                    <div>
                        <label for="account">Account Title*</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        <input type="text" class="form-control" id="account" name="account">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <div>
                        <label for="description">Description</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;"> 
                        <textarea rows="4" class="form-control" cols="50" id="description" name="description">  </textarea>
                    </div>

                </div>



                <div class="form-group col-sm-6">
                    <div>
                        <label for="balance_USD">Initial Balance [ USD ]</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        <input type="text" class="form-control amount" id="balance_USD" name="balance_USD" data-a-sign="$" data-a-sep="," data-a-dec="." data-p-sign="p" data-d-group="3">
                    </div>
                </div>




                <div class="form-group col-sm-6">
                    <div>
                        <label for="account_number">Account Number</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        <input type="text" class="form-control" id="account_number" name="account_number">
                    </div>


                </div>

                <div class="form-group col-sm-6">
                    <div>
                        <label for="contact_person">Contact Person</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        <input type="text" class="form-control" id="contact_person" name="contact_person">
                    </div>


                </div>

                <div class="form-group col-sm-6">
                    <div>
                        <label for="contact_phone">Phone</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">

                        <input type="text" class="form-control" id="contact_phone" name="contact_phone">
                    </div>

                </div>

                <div class="form-group col-sm-6">
                    <div>
                        <label for="ib_url">Internet Banking URL</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        <input type="text" class="form-control" id="ib_url" name="ib_url">
                    </div>


                </div>

                <div class="form-group col-sm-6">
                    <div>
                        <label for="ib_url">Owner</label>
                        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
                    </div>
                    <div style="clear:both"> </div>
                    <div class="col-md-11" style="padding-left: 0px;">
                        @Html.DropDownList("Owner", null, "Select Owner", new { @class = "form-control input-sm col-sm-11", @placeholder = "Owner " })
                    </div>
                </div>
                <div class="form-group col-sm-12"  >
                    <div style="float:right">
                        <button type="submit" id="confirmSave" class="btn btn-primary"><i class="fa fa-check"></i> Submit</button>
                    </div>
                    
                </div>


            </div>
        </div>
    </div>

</div>
<script src="~/Scripts/CustomScripts/AccountListManager.js"></script>
<script>
    $(document).ready(function () {


        $("#confirmSave").click(function (e) {
            if (AccountListManager.CreateValidation() === true) {
                AccountListManager.InsertAccountList();
            }
        });

    });
</script>